---
interface Props {
    classElement?: string;
    icon: string;
    iconClass?: string;
    text: string;
    textClass?: string;
}

const { classElement, icon, iconClass, text, textClass } = Astro.props;
const { default: svg } = await import(`/public/icons/${icon}.svg?raw`);
---

<button class={classElement}>
    <svg class={iconClass} set:html={svg} />
    <p class={textClass}>{text}</p>
</button>
