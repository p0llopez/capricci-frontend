---
import { Image } from "astro:assets";
interface Props {
    id: string;
    brand: string;
    image: any;
    name: string;
    presentation: number;
    presentation_format: string;
    price: string;
    stock: number;
}

const { id, brand, image, name, presentation, presentation_format, price, stock }: Props = Astro.props;
---

<div class="flex flex-col p-2 rounded-lg hover:shadow-lg transition">
    <a href={`product/${id}`}>
        <Image src={image} inferSize alt={name} class="mb-2 rounded" />
        <div class="pl-3">
            <p class="text-xs uppercase text-bluegreen font-semibold">{brand}</p>
            <h2 class="text-lg capitalize font-semibold">{name}</h2>
            <p>{presentation} {presentation_format}</p>
            <p class="text-xl capitalize font-bold">{price} €</p>
        </div>
    </a>
    <button
        class="bg-bluegreen-70 text-white rounded-lg p-2 mt-2 flex flex-row items-center justify-center hover:bg-bluegreen transition">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            stroke="#fff"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="icon icon-tabler icon-tabler-shopping-cart size-5 mr-3"
            viewBox="0 0 24 24">
            <path stroke="none" d="M0 0h24v24H0z"></path>
            <path d="M4 19a2 2 0 1 0 4 0 2 2 0 1 0-4 0m11 0a2 2 0 1 0 4 0 2 2 0 1 0-4 0"></path>
            <path d="M17 17H6V3H4"></path>
            <path d="m6 5 14 1-1 7H6"></path>
        </svg><span class="mt-1">Añadir</span></button
    >
</div>
