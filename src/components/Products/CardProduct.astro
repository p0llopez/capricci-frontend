---
import CartIcon from "@/icons/Cart.astro"
import { Image } from "astro:assets"

interface Props {
	id: string
	brand: string
	image: any
	name: string
	presentation: number
	presentation_format: string
	price: string
	stock: number
}

const { id, brand, image, name, presentation, presentation_format, price, stock }: Props =
	Astro.props
---

<div class="flex flex-col rounded-lg p-2 transition hover:shadow-lg">
	<a href={`product/${id}`}>
		<Image src={image} inferSize alt={name} class="mb-2 rounded" />
		<div class="flex flex-1 flex-col pl-3">
			<p class="text-xs font-semibold uppercase text-bluegreen">{brand}</p>
			<h2 class="text-lg font-semibold capitalize">{name}</h2>
			<p>{presentation} {presentation_format}</p>
			<p class="text-xl font-bold capitalize">{price} €</p>
		</div>
	</a>
	<button
		class="mt-2 flex flex-row items-center justify-center rounded-lg bg-bluegreen-70 p-2 text-white transition hover:bg-bluegreen"
	>
		<CartIcon class="mr-3 size-5 stroke-white" />
		<span class="mt-1">Añadir</span></button
	>
</div>
